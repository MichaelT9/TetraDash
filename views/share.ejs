<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <h1 id="home1">Share your thoughts</h1>
  
  <%- include('./partials/nav.ejs') %>

  

  <div class="container">
    <h1>Our community</h1>
    <br><br><br>
    <p>Give feedback, brag about your highest score, what shoyld we implement?</p>
    <br><br>
    <form class="tetris-form" action="/users" method="post">
      <label for="name">First Name:</label>
      <input type="text" id="name" name="name" maxlength="12" required>
      
      <label for="lastname">Last Name:</label>
      <input type="text" id="lastname" name="lastname" maxlength="12" required>
      
      <label for="comment">Comment:</label>
      <textarea id="comment" name="comment" rows="4" maxlength="550" required></textarea>
      
      <button type="submit" >Submit</button>
    </form>
  </div>
  

    <div class="container">
      <h2>All Comments</h2>
      <% if (users.length > 0) { %>
        <% users.forEach(user => { %>

        <div class="container">
        <p class="name"><%= user.name %></h3>
        <p class="lastname"><%= user.lastname %></p>
        <br>
        <p class="comment"><%= user.comment %></p>
        <a href="/users/<%= user._id %>" class="view-btn">View Comment</a>
        <form action="/users/<%= user._id %>?_method=DELETE" method="post" class="delete-form "> 
        </form>
        </div>

        <% }) %>
        <% } else { %>
        <p class="container">There are no comments to display...</p>
        <% } %>
      </div>

  <%- include('./partials/footer.ejs') %>

</body>
</html>